<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Duration</th>
      <th>Qualification</th>
      <th>Institution</th>
      <th>City</th>
      <th>Country</th>
      <th>References</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.educations.each do |education| %>
      <tr>
        <td><%= education.duration %></td>
        <td><%= education.qualification %></td>
        <td><%= education.institution %></td>
        <td><%= education.city %></td>
        <td><%= education.country %></td>
        <td><%= education.references %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

